<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/common_default_avatar"
        android:layout_margin="4dp"
        android:id="@+id/im_left_msg_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/im_left_msg_avatar"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/im_left_nick_name"
            android:layout_margin="4dp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/im_left_msg_content"
            android:layout_margin="4dp"
            android:layout_marginEnd="20dp"
            android:padding="4dp"
            android:background="@drawable/im_lef_msg_area"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>