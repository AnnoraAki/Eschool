<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_add_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@color/colorWhite"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_add_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_shape_filled_bg"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/civ_add_avatar"
        app:layout_constraintStart_toEndOf="@+id/civ_add_avatar"
        app:layout_constraintTop_toTopOf="@+id/civ_add_avatar"
        tools:text="Cchanges" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_shape_stoke_bg"
        android:layout_marginEnd="16dp"
        android:paddingStart="8dp"
        android:paddingTop="3dp"
        android:paddingEnd="8dp"
        android:paddingBottom="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/civ_add_avatar"
        tools:text="标签" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_shape_filled_bg"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingTop="3dp"
        android:paddingEnd="8dp"
        android:paddingBottom="3dp"
        android:maxLines="1"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tv_add_nickname"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_nickname"
        tools:text="约定时间：2019.8.8" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_shape_filled_bg"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingTop="3dp"
        android:paddingEnd="8dp"
        android:paddingBottom="3dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tv_add_nickname"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        tools:text="约定地点（店名）：采蝶轩！" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/tv_address"
        android:background="@color/defaultBackground"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_address"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

