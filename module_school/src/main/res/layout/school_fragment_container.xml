<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_toolbar"/>

    <View
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="52dp">

        <Button
            android:paddingEnd="22dp"
            android:text="@string/school_serach_people_align"
            android:background="@null"
            android:id="@+id/school_search_switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="#e3e3e3"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <Button
            android:paddingStart="22dp"
            android:text="@string/school_lost_found"
            android:background="@null"
            android:id="@+id/school_landf_switch_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:background="#dadada"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <FrameLayout
        android:id="@+id/school_page_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>